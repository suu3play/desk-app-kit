<Window x:Class="DeskAppKit.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskAppKit.Client"
        mc:Ignorable="d"
        Title="DeskAppKit - メインメニュー" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー（タイトルバーとメニューバーの統合） -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- アプリケーション名 -->
                <TextBlock Grid.Column="0" Text="DeskAppKit" FontSize="18" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center" Margin="0,0,24,0"/>

                <!-- ユーザー情報（タイトルの右側） -->
                <TextBlock Grid.Column="1" Text="{Binding WelcomeMessage}" Foreground="White"
                           VerticalAlignment="Center" FontSize="14" Margin="0,0,0,0"/>

                <!-- 右側: メニューボタン群 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="設定" Command="{Binding ShowSettingsCommand}"
                            Background="#1976D2" Foreground="White" BorderThickness="0"
                            Padding="16,6" Margin="0,0,8,0" Cursor="Hand">
                        <Button.ToolTip>
                            <ToolTip Content="アプリケーション設定 (Alt+S)"/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="診断" Command="{Binding ShowDiagnosticsCommand}"
                            Background="#1976D2" Foreground="White" BorderThickness="0"
                            Padding="16,6" Margin="0,0,8,0" Cursor="Hand">
                        <Button.ToolTip>
                            <ToolTip Content="ヘルスチェック・ログ表示 (Alt+D)"/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="バージョン情報" Command="{Binding ShowAboutCommand}"
                            Background="#1976D2" Foreground="White" BorderThickness="0"
                            Padding="16,6" Margin="0,0,16,0" Cursor="Hand">
                        <Button.ToolTip>
                            <ToolTip Content="アプリケーション情報 (Alt+A)"/>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="ログアウト" Command="{Binding LogoutCommand}"
                            Background="#1976D2" Foreground="White" BorderThickness="0"
                            Padding="12,6" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- メインコンテンツエリア -->
        <Grid Grid.Row="1">
            <!-- ContentControl: 各画面ビューをここに動的に表示 -->
            <ContentControl Content="{Binding CurrentView}">
                <!-- デフォルトコンテンツ（ビューが指定されていない場合） -->
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Margin="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- ウェルカムセクション -->
                            <Border Grid.Row="0" Background="White" Padding="24" Margin="0,0,0,16"
                                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="DeskAppKit へようこそ" FontSize="24" FontWeight="Bold"
                                               Foreground="#2196F3" Margin="0,0,0,8"/>
                                    <TextBlock Text="デスクトップアプリケーション共通基盤" FontSize="14"
                                               Foreground="#666" Margin="0,0,0,16"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="#666">
                                        <Run Text="このアプリケーションは、デスクトップアプリケーション開発における共通機能を提供します。"/>
                                        <LineBreak/>
                                        <Run Text="上部のメニューから各機能にアクセスできます。"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- 機能カードセクション -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl Margin="0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2" Rows="2"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <!-- カード1: 認証・ユーザー管理 -->
                                    <Border Background="White" Margin="0,0,8,8" Padding="20"
                                            BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="🔐" FontSize="32" Margin="0,0,0,12"/>
                                            <TextBlock Text="認証・ユーザー管理" FontSize="16" FontWeight="Bold"
                                                       Foreground="#333" Margin="0,0,0,8"/>
                                            <TextBlock Text="ログイン、ユーザー認証、権限管理などの基本機能"
                                                       TextWrapping="Wrap" Foreground="#666" FontSize="13"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- カード2: 設定管理 -->
                                    <Border Background="White" Margin="8,0,0,8" Padding="20"
                                            BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="⚙️" FontSize="32" Margin="0,0,0,12"/>
                                            <TextBlock Text="設定管理" FontSize="16" FontWeight="Bold"
                                                       Foreground="#333" Margin="0,0,0,8"/>
                                            <TextBlock Text="アプリケーション設定、ユーザー設定の保存・読み込み"
                                                       TextWrapping="Wrap" Foreground="#666" FontSize="13"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- カード3: ログ・診断 -->
                                    <Border Background="White" Margin="0,8,8,0" Padding="20"
                                            BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="📊" FontSize="32" Margin="0,0,0,12"/>
                                            <TextBlock Text="ログ・診断機能" FontSize="16" FontWeight="Bold"
                                                       Foreground="#333" Margin="0,0,0,8"/>
                                            <TextBlock Text="アプリケーションログの記録、ヘルスチェック、診断情報"
                                                       TextWrapping="Wrap" Foreground="#666" FontSize="13"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- カード4: 通知・メッセージング -->
                                    <Border Background="White" Margin="8,8,0,0" Padding="20"
                                            BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="🔔" FontSize="32" Margin="0,0,0,12"/>
                                            <TextBlock Text="通知・メッセージング" FontSize="16" FontWeight="Bold"
                                                       Foreground="#333" Margin="0,0,0,8"/>
                                            <TextBlock Text="ユーザー通知、トースト通知、メッセージング機能"
                                                       TextWrapping="Wrap" Foreground="#666" FontSize="13"/>
                                        </StackPanel>
                                    </Border>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Grid>

        <!-- フッター -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="16,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <TextBlock Text="DeskAppKit v1.0.0 - デスクトップアプリケーション共通基盤"
                       FontSize="11" Foreground="#777" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
