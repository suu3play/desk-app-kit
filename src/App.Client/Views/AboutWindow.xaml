<Window x:Class="DeskAppKit.Client.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="バージョン情報" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#2196F3" Padding="24">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="DeskAppKit" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="デスクトップアプリケーション共通基盤" FontSize="14" Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- コンテンツ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel>
                <!-- バージョン情報 -->
                <TextBlock Text="バージョン情報" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="バージョン:" Margin="0,0,12,8" Foreground="#666"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AppVersion}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text=".NET版:" Margin="0,0,12,8" Foreground="#666"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DotNetVersion}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="OS:" Margin="0,0,12,8" Foreground="#666"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding OsVersion}" Margin="0,0,0,8"/>
                </Grid>

                <Separator Margin="0,8,0,16"/>

                <!-- 機能概要 -->
                <TextBlock Text="主要機能" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <TextBlock TextWrapping="Wrap" Foreground="#555" Margin="0,0,0,16">
                    <Run Text="• ログ・設定管理（Local/Database切り替え）"/>
                    <LineBreak/>
                    <Run Text="• DB接続・認証・セキュリティ（BCrypt、AES-256暗号化）"/>
                    <LineBreak/>
                    <Run Text="• 自動アップデート/ダウングレード"/>
                    <LineBreak/>
                    <Run Text="• ヘルスチェック・診断機能"/>
                    <LineBreak/>
                    <Run Text="• グローバル例外処理"/>
                </TextBlock>

                <Separator Margin="0,8,0,16"/>

                <!-- 技術スタック -->
                <TextBlock Text="技術スタック" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <TextBlock TextWrapping="Wrap" Foreground="#555">
                    <Run Text="• .NET 8.0"/>
                    <LineBreak/>
                    <Run Text="• WPF (MVVM)"/>
                    <LineBreak/>
                    <Run Text="• Entity Framework Core 8.0"/>
                    <LineBreak/>
                    <Run Text="• BCrypt.Net / AES-256"/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタン -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="16" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Button Content="閉じる" Click="CloseButton_Click"
                    Padding="24,8" HorizontalAlignment="Center"
                    Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        </Border>
    </Grid>
</Window>
